# class Hyle.LayersCollection
# --------------------------------------------------------------------------------
class Hyle.LayersCollection extends Object

# ----------------------------------------
# constructor
# ----------------------------------------
  constructor: () ->
    @layers = []


# ----------------------------------------
# add
# ----------------------------------------
  add: (layer) ->
    layer.layer._id or= layer.layer.name
    @layers[layer.layer._id] = layer


# ----------------------------------------
# find
# ----------------------------------------
  find: (key) ->
    return @layers[key]
